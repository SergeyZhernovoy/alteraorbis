<items>
  <item name="humanFemale"
        resource="humanFemale"
			  flags="CHARACTER"
			  mass ="50">
    <intrinsics>
      <item name="hand"
            flags="MELEE_WEAPON INTRINSIC_AT_HARDPOINT"
            hardpoint="trigger" />
    </intrinsics>
  </item>>

  <item name="mantis"
        resource="mantis"
        flags="CHARACTER"
        mass="40">
    <intrinsics>
      <item name="pincer"
            flags="MELEE_WEAPON INTRINSIC_FREE"
            melee.kinetic="3"/>
    </intrinsics>
  </item>

  <!-- Base effects, FIRE, in this case, are part of the Balrog
       model. Combination effects SMOKE=FIRE+WATER are 
       procedurally generated at run time.
       
       "mass" is the basis for melee damage. Numbers (melee.kinetic) are
       modifiers of that. 
       TBD is the basis for ranged damage.
  -->
  <item name="balrog"
        resource="balrog"
        flags="CHARACTER"
        mass="400">
    <intrinsics>
      <!-- since intrinsic, also grants fire immunity -->
      <item name="claw"
            flags="MELEE_WEAPON INTRINSIC_AT_HARDPOINT EFFECT_FIRE"
            melee.kinetic="1.5"
            hardpoint="trigger"
            />
      <item name="breath"
            flags="RANGED_WEAPON INTRINSIC_FREE EFFECT_FIRE"
            ranged.kinetic="0.5"
            ranged.fire="3"
            />
    </intrinsics>
  </item>

  <item name="dummytarget"
        resource="dummytarget"
        flags="CHARACTER"
        mass="30"
        />

  <item name="testknife"
        resource="testknife"
        flags="MELEE_WEAPON HELD_AT_HARDPOINT"
        melee.kinetic="2"
        hardpoint="trigger" />

  <item name="ax"
        resource="ax"
        flags="MELEE_WEAPON HELD_AT_HARDPOINT"
        melee.kinetic="3"
        hardpoint="trigger" />

  <item name="testgun"
        resource="testgun"
        flags="MELEE_WEAPON RANGED_WEAPON HELD_AT_HARDPOINT"
